];
---

<Layout title={title}>
  <ContextAlert class="mb-4" />
    <h1 class="mb-10">{title}</h1>
    <Markdown content={explainer} class="text-lg mb-10" />

    <section class="project-catalog">
      <h2>Projects</h2>
      <div class="grid">
        {projects.map((project) => <ProjectCard {...project} />)}
